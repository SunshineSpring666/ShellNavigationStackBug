<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MaApp.LoginPage"
             Shell.PresentationMode="Modal"
             Shell.FlyoutBehavior="Disabled"
             Title="LoginPage">

    <VerticalStackLayout VerticalOptions="FillAndExpand">
        <Label Text="Several navigation scheme for logging in (Should not be able to naviate back to LoginPage by pressing back button):"/>
        <Button Text="Login: InsertPageBefore then PopToRootAsync" Clicked="Login_InsertPageBefore_Clicked" VerticalOptions="CenterAndExpand"/>
        <Button Text="Login: PushAsync" Clicked="Login_PushAsync_Clicked" VerticalOptions="CenterAndExpand"/>
    </VerticalStackLayout>
    
</ContentPage>