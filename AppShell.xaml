<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="MaApp.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:MaApp"
       FlyoutBehavior="Locked"
       x:Name="this"
       BindingContext="{x:Reference this}">

    <ShellContent Title="0_LoginPage" ContentTemplate="{DataTemplate local:LoginPage}" FlyoutItemIsVisible="False"/>
    <ShellContent Title="1_AnnouncementsPage" ContentTemplate="{DataTemplate local:AnnouncementsPage}"/>
    <ShellContent Title="2_InventoriesPage" ContentTemplate="{DataTemplate local:InventoriesPage}"/>
    <ShellContent Title="3_OrdersPage" ContentTemplate="{DataTemplate local:OrdersPage}"/>
    <ShellContent Title="4_SchedulesPage" ContentTemplate="{DataTemplate local:SchedulesPage}"/>
    <ShellContent Title="5_SharedTasksPage" ContentTemplate="{DataTemplate local:SharedTasksPage}"/>
    
</Shell>
